{{#if deleteModal}}
<div class="container">
    <div class="modal-content">
        <div class="modal-body">
            <p>Are you sure you want to delete?</p>
        </div>
        <div class="modal-footer">
            <form action="/posts/delete/{{_id}}" method="POST"><button type="submit"
                    class="btn btn-primary">Yes</button>
            </form>
            <a href="/posts/{{_id}}" type="submit" class="btn btn-danger">No</a>
        </div>
    </div>
</div>
{{/if}}
</div>