    <div class="row text-center">
        {{#if userEdit}}
        <div class="__color">
            <a class="px-3" href="/posts/edit/{{_id}}">Edit</a>
            <a class="px-3" href="/posts/delete/{{_id}}">Delete</a>
        </div>
        {{/if}}
    </div>
