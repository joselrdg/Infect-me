<div class="container-fluid mt-5">
    <main class="row align-items-start  mx-3">
        {{!-- Category Section--}}

        <section class="col-2">
            Categorias
        </section>
        {{!-- Lists Section--}}

        <section class="col-7">
            {{!-- Block section--}}
            <div class="border border-2 rounded-3">
                {{!-- Nav bar block--}}
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">Mis posts</a>

                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a id='mypostsButton' class="nav-link active" aria-current="page"
                                        data-bs-toggle="collapse" role="button" data-bs-target=".multi-collapse"
                                        aria-expanded="false" aria-controls="collapseExample" href="#">{{#if vermas}}Ver
                                        mas{{else}}Ver menos{{/if}}</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" href="/posts/create">crear un post</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <div class="row align-items-center"> {{!-- List block--}}


                    {{#each posts as |postData| }} {{!-- Item list--}}


                    {{>post postData}}

                    {{/each}}


                </div> {{!-- End list block--}}



        </section>

        <section class="col-3">
            <div class="border border-2 rounded-3">  {{!-- Container busca usuarios--}}
                <form id="busca-usuario">
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Busqueda de usuarios</label>
                        <input name="inputUserName" id="inputUserName" type="text" class="form-control" placeholder="Nombre de usuario"
                            aria-label="Nombre de usuario" aria-describedby="basic-addon2">
                      <button id="userSearchIdButton" class="btn btn-primary mt-3">Busca</button>
                    </div>

                </form>
                <div id="busca-usuario-salida">
                    
                </div>
            </div>
            <div>
                amigos
            </div>
        </section>
    </main>

</div>