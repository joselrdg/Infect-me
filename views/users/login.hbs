<div id="__logForm">
  <div class="text-center form-signin-container ">
    <main class="form-signin">
      <form action="/login" method="POST" class=" p-3">
        <div class="position-absolute top-50 start-50 translate-middle text-light">
          {{!-- <h1 class="h3 mb-3 fw-normal">Por favor inicia sesión</h1> --}}
          <label for="inputUserName" class="visually-hidden">Usuario</label>
          <input type="text" id="userName" value="{{user.userName}}"
            class="form-control __buttonLogFormI {{#if errors.userName}}is-invalid{{/if}}" placeholder="User name"
            name="userName" required="" autofocus="">
          {{#if errors.userName}}
          <div class="invalid-feedback">
            {{errors.userName}}
          </div>
          {{/if}}
          <label for="inputPassword" class="visually-hidden">Contraseña</label>
          <input type="password" id="password"
            class="form-control __buttonLogFormI {{#if errors.password}}is-invalid{{/if}}" placeholder="Password"
            name="password" required="">
          {{#if errors.password}}
          <div class="invalid-feedback">
            {{errors.password}}
          </div>
          {{/if}}

          <button class="w-100 btn btn-lg btn-primary __buttonLogFormD" type="submit"> Iniciar sesión </button>
          {{#if message}}
          <p>{{message}}</p>
          {{/if}}

          <div>
            <a class="w-100 btn btn-lg btn-primary my-2 __buttonLogFormD" href="/auth/youtube">Seguir con
              Youtube</a>
          </div>
        </div>
      </form>
    </main>
  </div>
</div>
{{> footer}}